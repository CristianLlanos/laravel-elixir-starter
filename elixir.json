{
    "appPath": "app",
    "assetsPath": "resources",
    "publicPath": "public",
    "sourcemaps": true,
    "css": {
        "outputFolder": "css",
        "autoprefix": {
            "enabled": true,
            "options": {
                "browsers": ["> 1%"],
                "cascade": false,
                "add": true,
                "remove": true
            }
        },
    	"less": {
    	    "folder": "less"
    	},
    	"sass": {
    	    "folder": "sass"
    	}
    },
    "versioning": {
        "buildFolder": "build"
    },
    "browserSync": {
        "proxy": "localhost:8000",
        "reloadOnRestart": true,
        "notify": false
    },
    "js": {
        "folder": "js",
        "outputFolder": "js",
        "babel": {
            "options": {
                "stage": 2,
                "compact": false
            }
        },
        "coffee": {
            "folder": "coffee",
            "options": {}
        }
    }
}
